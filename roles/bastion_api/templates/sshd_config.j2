# SSH Server Configuration for Bastion
# Generated by Ansible - Do not edit manually

# Port and Protocol
Port {{ bastion_ssh_port }}
Protocol 2
AddressFamily any
ListenAddress 0.0.0.0

# Host Keys
HostKey /etc/ssh/ssh_host_rsa_key
HostKey /etc/ssh/ssh_host_ecdsa_key
HostKey /etc/ssh/ssh_host_ed25519_key

# Authentication
PermitRootLogin {{ bastion_permit_root_login }}
PubkeyAuthentication {{ 'yes' if bastion_pubkey_authentication else 'no' }}
PasswordAuthentication {{ 'yes' if bastion_password_authentication else 'no' }}
PermitEmptyPasswords no
ChallengeResponseAuthentication no
UsePAM yes

# Security Settings
MaxAuthTries {{ bastion_max_auth_tries }}
MaxSessions {{ bastion_max_sessions }}
ClientAliveInterval {{ bastion_client_alive_interval }}
ClientAliveCountMax {{ bastion_client_alive_count_max }}

# Forwarding
X11Forwarding no
AllowTcpForwarding yes
AllowAgentForwarding yes
GatewayPorts no
PermitTunnel no

# Logging
SyslogFacility AUTH
LogLevel VERBOSE

# Environment
AcceptEnv LANG LC_*
PrintMotd no
PrintLastLog yes

# Subsystems
Subsystem sftp /usr/lib/openssh/sftp-server

# Banner
Banner /etc/ssh/banner
