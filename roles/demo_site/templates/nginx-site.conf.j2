# viljo.se - Matrix background page
server {
    listen 80;
    server_name {{ demo_site_external_domain }};

    root {{ demo_site_web_root }};
    index matrix.html;

    location / {
        try_files $uri $uri/ /matrix.html;
    }
}

# links.viljo.se - Services links page
server {
    listen 80;
    server_name links.{{ demo_site_external_domain }};

    root {{ demo_site_web_root }};
    index links.html;

    location / {
        try_files $uri $uri/ /links.html;
    }
}

# Default fallback server (for IP access or unknown domains)
server {
    listen 80 default_server;
    server_name _;

    root {{ demo_site_web_root }};
    index links.html;

    location / {
        try_files $uri $uri/ /links.html;
    }
}
