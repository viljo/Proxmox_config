<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ links_portal_title }}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            padding: 40px 20px;
            color: #fff;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        header {
            text-align: center;
            margin-bottom: 50px;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 300;
            margin-bottom: 10px;
            color: #e94560;
        }

        .subtitle {
            color: #a0a0a0;
            font-size: 1rem;
        }

        .status-summary {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-top: 15px;
            font-size: 0.9rem;
        }

        .status-summary span {
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .service-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 24px;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            display: block;
            position: relative;
        }

        .service-card:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #e94560;
            transform: translateY(-4px);
            box-shadow: 0 10px 40px rgba(233, 69, 96, 0.2);
        }

        .service-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .service-icon {
            font-size: 2.5rem;
        }

        .status-light {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #666;
            box-shadow: 0 0 6px rgba(102, 102, 102, 0.5);
            transition: all 0.3s ease;
        }

        .status-light.checking {
            background: #f39c12;
            box-shadow: 0 0 8px rgba(243, 156, 18, 0.6);
            animation: pulse 1s infinite;
        }

        .status-light.online {
            background: #27ae60;
            box-shadow: 0 0 8px rgba(39, 174, 96, 0.6);
        }

        .status-light.offline {
            background: #e74c3c;
            box-shadow: 0 0 8px rgba(231, 76, 60, 0.6);
        }

        .status-light.unknown {
            background: #f39c12;
            box-shadow: 0 0 8px rgba(243, 156, 18, 0.6);
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .service-name {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 8px;
            color: #fff;
        }

        .service-description {
            font-size: 0.9rem;
            color: #a0a0a0;
            line-height: 1.5;
            margin-bottom: 8px;
        }

        .service-latency {
            font-size: 0.75rem;
            color: #666;
        }

        .service-latency.fast { color: #27ae60; }
        .service-latency.medium { color: #f39c12; }
        .service-latency.slow { color: #e74c3c; }

        footer {
            text-align: center;
            margin-top: 60px;
            color: #666;
            font-size: 0.85rem;
        }

        .last-check {
            margin-top: 8px;
            font-size: 0.8rem;
        }

        footer a {
            color: #e94560;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>{{ links_portal_title }}</h1>
            <p class="subtitle">Self-hosted infrastructure services</p>
            <div class="status-summary">
                <span><span class="status-light online"></span> <span id="online-count">0</span> online</span>
                <span><span class="status-light offline"></span> <span id="offline-count">0</span> offline</span>
                <span><span class="status-light unknown"></span> <span id="unknown-count">0</span> unknown</span>
            </div>
        </header>

        <div class="services-grid">
{% for service in infrastructure_services %}
{% if service.status == 'deployed_working' and service.show_in_portal | default(true) and service.slug != 'links' %}
            <a href="https://{{ service.subdomain }}.{{ public_domain }}"
               class="service-card"
               data-url="https://{{ service.subdomain }}.{{ public_domain }}"
               data-name="{{ service.name }}">
                <div class="service-header">
                    <div class="service-icon">{{ service.icon }}</div>
                    <div class="status-light checking" title="Checking..."></div>
                </div>
                <div class="service-name">{{ service.name }}</div>
                <div class="service-description">{{ service.description }}</div>
                <div class="service-latency"></div>
            </a>
{% endif %}
{% endfor %}
        </div>

        <footer>
            <p>Auto-generated from services.yml</p>
            <p class="last-check">Last check: <span id="last-check-time">never</span></p>
        </footer>
    </div>

    <script>
        const CHECK_INTERVAL = 60000; // Check every 60 seconds
        const TIMEOUT = 10000; // 10 second timeout

        function checkService(card) {
            return new Promise((resolve) => {
                const url = card.dataset.url;
                const light = card.querySelector('.status-light');
                const latencyEl = card.querySelector('.service-latency');

                light.className = 'status-light checking';
                light.title = 'Checking...';

                const startTime = performance.now();
                let resolved = false;

                const done = (status, title, latencyText, latencyClass) => {
                    if (resolved) return;
                    resolved = true;
                    light.className = 'status-light ' + status;
                    light.title = title;
                    latencyEl.textContent = latencyText;
                    latencyEl.className = 'service-latency ' + (latencyClass || '');
                    resolve(status === 'online' ? 'online' : status === 'offline' ? 'offline' : 'unknown');
                };

                // Timeout handler
                const timeoutId = setTimeout(() => {
                    done('offline', 'Timeout', 'timeout', 'slow');
                }, TIMEOUT);

                // Use image loading - bypasses CORS completely
                // Try favicon first, then fall back to the page itself
                const img = new Image();

                img.onload = () => {
                    clearTimeout(timeoutId);
                    const latency = Math.round(performance.now() - startTime);
                    const latencyClass = latency < 200 ? 'fast' : latency < 500 ? 'medium' : 'slow';
                    done('online', 'Online', latency + 'ms', latencyClass);
                };

                img.onerror = () => {
                    // Error loading favicon - try a fetch as backup
                    // onerror fires for both "server responded with non-image" and "server unreachable"
                    // We need to distinguish - try fetch with no-cors
                    fetch(url, { method: 'GET', mode: 'no-cors', cache: 'no-cache' })
                        .then(() => {
                            clearTimeout(timeoutId);
                            const latency = Math.round(performance.now() - startTime);
                            const latencyClass = latency < 200 ? 'fast' : latency < 500 ? 'medium' : 'slow';
                            done('online', 'Online', latency + 'ms', latencyClass);
                        })
                        .catch((err) => {
                            clearTimeout(timeoutId);
                            // Check if it's a network error vs CORS error
                            // Unfortunately both show as TypeError, but we can check timing
                            const latency = Math.round(performance.now() - startTime);
                            if (latency < 100) {
                                // Very fast failure = likely DNS or connection refused
                                done('offline', 'Unreachable', 'down', 'slow');
                            } else {
                                // Slower failure = server responded but CORS blocked
                                const latencyClass = latency < 200 ? 'fast' : latency < 500 ? 'medium' : 'slow';
                                done('online', 'Online (CORS)', latency + 'ms', latencyClass);
                            }
                        });
                };

                // Try to load favicon
                img.src = url + '/favicon.ico?' + Date.now();
            });
        }

        async function checkAllServices() {
            const cards = document.querySelectorAll('.service-card');
            const results = { online: 0, offline: 0, unknown: 0 };

            // Check services in parallel with a small stagger
            const promises = Array.from(cards).map((card, index) => {
                return new Promise(resolve => {
                    setTimeout(async () => {
                        const status = await checkService(card);
                        results[status]++;
                        resolve();
                    }, index * 100); // Stagger by 100ms
                });
            });

            await Promise.all(promises);

            // Update summary counts
            document.getElementById('online-count').textContent = results.online;
            document.getElementById('offline-count').textContent = results.offline;
            document.getElementById('unknown-count').textContent = results.unknown;

            // Update last check time
            document.getElementById('last-check-time').textContent = new Date().toLocaleTimeString();
        }

        // Initial check
        checkAllServices();

        // Periodic checks
        setInterval(checkAllServices, CHECK_INTERVAL);
    </script>
</body>
</html>
