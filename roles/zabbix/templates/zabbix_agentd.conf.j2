# Zabbix Agent Configuration
# Managed by Ansible - Do not edit manually

PidFile=/run/zabbix/zabbix_agentd.pid
LogFile=/var/log/zabbix/zabbix_agentd.log
LogFileSize=0

# Passive checks related
Server={{ agent_server }}

# Active checks related
ServerActive={{ agent_server_active }}
Hostname={{ agent_hostname }}

# Listen configuration
ListenPort={{ zabbix_agent_port }}
# ListenIP=0.0.0.0

# Timeout
Timeout=3

# Include additional configuration files
Include=/etc/zabbix/zabbix_agentd.d/*.conf

# UserParameter for custom metrics
# UserParameter=custom.metric,command

# Allow all UserParameters from config file (unsafe in production)
# AllowKey=system.run[*]

# Performance monitoring
StartAgents=3
RefreshActiveChecks=120
BufferSend=5
BufferSize=100

# Enable remote commands (disabled by default for security)
# EnableRemoteCommands=0
