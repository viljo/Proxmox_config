---
timezone: UTC
public_domain: example.com
loopia_api_user: "{{ vault_loopia_api_user }}"
loopia_api_password: "{{ vault_loopia_api_password }}"
traefik_acme_email: "admin@{{ public_domain }}"
traefik_dns_challenge_provider: loopia
loopia_dns_interface: "{{ wan_bridge }}"
loopia_dns_records:
  - host: "@"
    ttl: 600
  - host: links
  - host: demo
  - host: gitlab
  - host: netbox
  - host: keycloak
  - host: nextcloud
  - host: jellyfin
  - host: homeassistant
  - host: qbittorrent
  - host: wazuh
  - host: openmediavault
  - host: zipline
  - host: zabbix
traefik_services:
  - name: viljo
    host: "{{ public_domain }}"
    container_id: "{{ demo_site_container_id }}"
    port: "{{ demo_site_service_port }}"
  - name: links
    host: "links.{{ public_domain }}"
    container_id: "{{ demo_site_container_id }}"
    port: "{{ demo_site_service_port }}"
  - name: demo
    host: "demo.{{ public_domain }}"
    container_id: "{{ demo_site_container_id }}"
    port: "{{ demo_site_service_port }}"
  - name: gitlab
    host: "gitlab.{{ public_domain }}"
    container_id: "{{ gitlab_container_id }}"
    port: 80
  - name: keycloak
    host: "keycloak.{{ public_domain }}"
    container_id: "{{ keycloak_container_id }}"
    port: 8080
  - name: netbox
    host: "netbox.{{ public_domain }}"
    container_id: "{{ netbox_container_id }}"
    port: "{{ netbox_service_port }}"
  - name: nextcloud
    host: "nextcloud.{{ public_domain }}"
    container_id: "{{ nc_container_id }}"
    port: 80
  - name: jellyfin
    host: "jellyfin.{{ public_domain }}"
    container_id: "{{ jellyfin_container_id }}"
    port: 8096
  - name: homeassistant
    host: "homeassistant.{{ public_domain }}"
    container_id: "{{ ha_container_id }}"
    port: 8123
  - name: qbittorrent
    host: "qbittorrent.{{ public_domain }}"
    container_id: "{{ qbittorrent_container_id }}"
    port: "{{ qbittorrent_web_port }}"
  - name: wazuh
    host: "wazuh.{{ public_domain }}"
    container_id: "{{ wazuh_container_id }}"
    port: 5601
    scheme: https
    insecure_skip_verify: true
  - name: openmediavault
    host: "openmediavault.{{ public_domain }}"
    container_id: "{{ omv_container_id }}"
    port: 443
    scheme: https
    insecure_skip_verify: true
  - name: zipline
    host: "zipline.{{ public_domain }}"
    container_id: "{{ zipline_container_id }}"
    port: 3000
  - name: zabbix
    host: "zabbix.{{ public_domain }}"
    container_id: "{{ zabbix_container_id }}"
    port: 80
management_bridge: vmbr0
wan_bridge: vmbr2
public_bridge: vmbr3
dmz_subnet: 172.16.10.0/24
dmz_prefix: 24
dmz_gateway: 172.16.10.1
dmz_dns_servers:
  - 172.16.10.1
  - 1.1.1.1
dmz_netmask: 255.255.255.0
dmz_host_ip: 172.16.10.2
wireguard_peer_configs:
  - name: "Example Laptop"
    public_key: "PEER_PUBLIC_KEY_HERE="
    allowed_ips: "192.168.100.10/32"
    persistent_keepalive: 25
  - name: "Example Phone"
    public_key: "PEER_PUBLIC_KEY_HERE="
    allowed_ips: "192.168.100.11/32"
    persistent_keepalive: 25
